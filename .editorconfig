# EditorConfig for Skilloo Educational App
# إعدادات المحرر لتطبيق سكيلو التعليمي
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript and TypeScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 120
quote_type = single

# JSON files
[*.{json,jsonc,json5}]
indent_style = space
indent_size = 2
insert_final_newline = false

# CSS, SCSS, Sass, Less files
[*.{css,scss,sass,less,styl}]
indent_style = space
indent_size = 2
max_line_length = 120

# HTML files
[*.{html,htm,xhtml}]
indent_style = space
indent_size = 2
max_line_length = 120

# XML files
[*.{xml,svg}]
indent_style = space
indent_size = 2

# Vue files
[*.vue]
indent_style = space
indent_size = 2
max_line_length = 120

# Svelte files
[*.svelte]
indent_style = space
indent_size = 2
max_line_length = 120

# Markdown files
[*.{md,mdx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# TOML files
[*.toml]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,cfg,conf,config}]
indent_style = space
indent_size = 2

# Environment files
[.env*]
indent_style = space
indent_size = 2
insert_final_newline = false

# Package files
[package.json]
indent_style = space
indent_size = 2

[package-lock.json]
indent_style = space
indent_size = 2
insert_final_newline = false

[yarn.lock]
indent_style = space
indent_size = 2
insert_final_newline = false

[pnpm-lock.yaml]
indent_style = space
indent_size = 2

# TypeScript configuration
[tsconfig*.json]
indent_style = space
indent_size = 2

# ESLint configuration
[.eslintrc*]
indent_style = space
indent_size = 2

# Prettier configuration
[.prettierrc*]
indent_style = space
indent_size = 2

# Babel configuration
[.babelrc*]
indent_style = space
indent_size = 2

[babel.config.*]
indent_style = space
indent_size = 2

# PostCSS configuration
[postcss.config.*]
indent_style = space
indent_size = 2

# Tailwind configuration
[tailwind.config.*]
indent_style = space
indent_size = 2

# Vite configuration
[vite.config.*]
indent_style = space
indent_size = 2

# Vitest configuration
[vitest.config.*]
indent_style = space
indent_size = 2

# Jest configuration
[jest.config.*]
indent_style = space
indent_size = 2

# Webpack configuration
[webpack.config.*]
indent_style = space
indent_size = 2

# Rollup configuration
[rollup.config.*]
indent_style = space
indent_size = 2

# Capacitor configuration
[capacitor.config.*]
indent_style = space
indent_size = 2

# Netlify configuration
[netlify.toml]
indent_style = space
indent_size = 2

# Vercel configuration
[vercel.json]
indent_style = space
indent_size = 2

# GitHub workflows
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 2

[docker-compose*.{yml,yaml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2
end_of_line = lf

# Batch files
[*.{bat,cmd}]
indent_style = space
indent_size = 2
end_of_line = crlf

# PowerShell files
[*.ps1]
indent_style = space
indent_size = 2
end_of_line = crlf

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# PHP files
[*.php]
indent_style = space
indent_size = 4

# Java files
[*.java]
indent_style = space
indent_size = 4

# C/C++ files
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4

# C# files
[*.cs]
indent_style = space
indent_size = 4

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Rust files
[*.rs]
indent_style = space
indent_size = 4

# Swift files
[*.swift]
indent_style = space
indent_size = 4

# Kotlin files
[*.kt]
indent_style = space
indent_size = 4

# Dart files
[*.dart]
indent_style = space
indent_size = 2

# Ruby files
[*.rb]
indent_style = space
indent_size = 2

# Makefile
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Git files
[.gitignore]
indent_style = space
indent_size = 2

[.gitattributes]
indent_style = space
indent_size = 2

# License files
[LICENSE*]
indent_style = space
indent_size = 2
insert_final_newline = false

# README files
[README*]
indent_style = space
indent_size = 2
max_line_length = 80

# Changelog files
[CHANGELOG*]
indent_style = space
indent_size = 2
max_line_length = 80

# Contributing files
[CONTRIBUTING*]
indent_style = space
indent_size = 2
max_line_length = 80

# Security files
[SECURITY*]
indent_style = space
indent_size = 2
max_line_length = 80

# Code of conduct files
[CODE_OF_CONDUCT*]
indent_style = space
indent_size = 2
max_line_length = 80

# Issue and PR templates
[.github/{ISSUE_TEMPLATE,PULL_REQUEST_TEMPLATE}/*]
indent_style = space
indent_size = 2
max_line_length = 80

# Ignore binary files
[*.{png,jpg,jpeg,gif,ico,svg,woff,woff2,ttf,otf,eot}]
insert_final_newline = false
trim_trailing_whitespace = false

# Ignore minified files
[*.min.*]
insert_final_newline = false
trim_trailing_whitespace = false

# Ignore generated files
[{dist,build,coverage}/**]
insert_final_newline = false
trim_trailing_whitespace = false

# Ignore node_modules
[node_modules/**]
insert_final_newline = false
trim_trailing_whitespace = false