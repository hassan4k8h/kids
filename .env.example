# ملف إعدادات البيئة - نموذج
# انسخ هذا الملف إلى .env وأضف القيم الحقيقية

# إعدادات Supabase
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# إعدادات Stripe (للاشتراكات)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# إعدادات Firebase (بديل)
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# إعدادات التطبيق
VITE_APP_NAME="لعبة تعليمية للأطفال"
VITE_APP_VERSION=1.0.0
VITE_APP_URL=http://localhost:3000

# إعدادات Google Analytics
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# إعدادات Sentry (مراقبة الأخطاء)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# إعدادات البريد الإلكتروني
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# إعدادات الأمان
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key

# إعدادات التطوير
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info